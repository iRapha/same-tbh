#!/usr/bin/env python3
import subprocess
import json


hist = []
inp = input('tbh (recording) $ ')

while not inp == 'donezo':
    subprocess.call(inp)
    hist.append(inp)
    inp = input('tbh (recording) $ ')

# save hist
with open('~/.same', 'w') as f:
    f.write(json.dumps(hist))

print('gottem')

